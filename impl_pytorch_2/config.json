{
    "name": "Mnist_LeNet",
    "n_gpu": 1,
    
    "arch": {
        "type": "ShrecBaseline",
        "args": {
            "num_classes":20,
            "view_embedding_size":2048,
            "view_after_embedding_size":128
        }
    },
    "data_loader": {
        "type": "ShrecDataloader",
        "args":{
            "data_dir": "../data/shrec17/resnet50",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 16
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
